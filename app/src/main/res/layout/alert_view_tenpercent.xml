<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/tenpercentbuy" />

    <ImageView
        android:id="@+id/imageViewCancel"
        android:layout_width="28dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <ImageView
        android:id="@+id/imageViewGelen"
        android:layout_width="225dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19"
        app:srcCompat="@drawable/loadicon" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGelen"
        app:layout_constraintStart_toStartOf="@+id/imageViewGelen"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCancel"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/tenpercbuyicon" />

    <TextView
        android:id="@+id/textViewGemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorItem"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewGelen"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/imageViewBuyButton"
        android:layout_width="36dp"
        android:layout_height="21dp"
        android:layout_marginStart="174dp"
        android:layout_marginLeft="174dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGelen"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/buy_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>